# Environment variables for Project Heimdall
# Copy this file to .env and fill in your values

# === Database Configuration ===
DATABASE_USER=postgres
DATABASE_PASSWORD=your_password_here
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=heimdall_db

# Async database URL (auto-generated)
# DATABASE_URL=postgresql+asyncpg://postgres:your_password_here@localhost:5432/heimdall_db

# === LLM Configuration ===
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1
MODEL_NAME=gpt-3.5-turbo

# === Application Configuration ===
APP_NAME=Project Heimdall
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# === Server Configuration ===
HOST=0.0.0.0
PORT=8001

# === Logging Configuration ===
LOG_LEVEL=INFO
LOG_PAYLOADS=false
MAX_HISTORY_MESSAGES=10

# === Security Configuration ===
SECRET_KEY=your_secret_key_here_for_jwt
ACCESS_TOKEN_EXPIRE_MINUTES=30

# === MCP Configuration ===
GITHUB_PERSONAL_ACCESS_TOKEN=your_github_token_here
SLACK_BOT_TOKEN=your_slack_bot_token_here
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password_here
BRAVE_API_KEY=your_brave_search_api_key_here

# === Optional Features ===
ENABLE_METRICS=true
ENABLE_CORS=true
ENABLE_DOCS=true

# === Development Only ===
RELOAD=true
LOG_LEVEL_DEV=DEBUG